<h1>All Products</h1>

<%= link_to 'Categories', categories_path %>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= link_to product.name, product_path(product) %><br>
      <%= image_tag product.image if product.image.present? %><br>
      <%= number_to_currency(product.price) %>
    </li>
  <% end %>
</ul>
