<h1 class="display-4">All Products</h1>

<%= link_to 'Categories', categories_path, class: "btn btn-primary mb-3" %>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= image_tag product.image, class: "card-img-top", alt: product.name if product.image.present? %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
          <p class="card-text"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
